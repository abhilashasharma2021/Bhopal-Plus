<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/skyblue"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="10dp"
                        android:padding="15dp"
                        android:src="@drawable/menu" />


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/bhopal_plus"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/skyblue"
                android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:id="@+id/v"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:background="@color/darkblue"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tx"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/v"
        android:text="@string/bhopal_covid_19_beds_availability"
        android:textColor="@color/darkblue"
        android:textSize="14sp"
        android:textStyle="bold" />
    <View
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:layout_toEndOf="@+id/tx"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@color/darkblue"/>

</RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:strokeColor="@color/darkblue"
                        app:strokeWidth="1.5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1">


                        <LinearLayout
                            android:id="@+id/ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="@string/isolation"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:padding="6dp"
                                android:background="@drawable/dark_blue_round"
                                android:textStyle="normal" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">


                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txAv"
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/availiable"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_toEndOf="@+id/txAv"
                                    android:text="10000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txCap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/capacity"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/txCap"
                                    android:text="100000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>


                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/darkblue"
                        app:strokeWidth="1.5dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="@string/oxygen"
                                android:textColor="@color/white"
                                android:padding="6dp"
                                android:background="@drawable/dark_blue_round"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">


                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txOx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/availiable"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_toEndOf="@+id/txOx"
                                    android:text="10000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txOxx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/capacity"
                                    android:textSize="12sp"
                                    android:textColor="@color/black"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/txOxx"
                                    android:text="100000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>


                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginTop="10dp"
                        app:strokeColor="@color/darkblue"
                        app:strokeWidth="1.5dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:text="@string/icu_hdu"
                                android:textColor="@color/white"
                                android:padding="6dp"
                                android:background="@drawable/dark_blue_round"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">


                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txIc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/availiable"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:layout_toEndOf="@+id/txIc"
                                    android:text="10000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txIcc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="@string/capacity"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/txIcc"
                                    android:text="100000"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="normal" />


                            </RelativeLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                       android:background="@drawable/dash_border"
                        android:text="@string/other_services"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </RelativeLayout>


               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:layout_marginTop="15dp"
                   android:layout_marginStart="5dp"
                   android:layout_marginEnd="5dp"
                   android:id="@+id/rvService"
                   android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:strokeColor="@color/darkblue"
        app:strokeWidth="1dp"
        android:id="@+id/call"
        android:layout_marginBottom="60dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_height="wrap_content">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:padding="3dp"
              android:id="@+id/ivCall"
              android:layout_gravity="center"
              android:src="@drawable/call" />


          <com.google.android.material.textview.MaterialTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/emergency_call"
              android:layout_toEndOf="@+id/ivCall"
              android:textColor="@color/darkblue"
              android:textSize="18sp"
              android:textStyle="bold" />

      </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>